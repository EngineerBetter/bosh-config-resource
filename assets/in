#!/bin/sh

# vim: set ft=sh

set -e

exec 3>&1 # make stdout available as fd 3 for the result
exec 1>&2 # redirect all output to stderr for logging

destination=$1

source $(dirname $0)/common.sh

if [ -z "$destination" ]; then
  echo "usage: $0 <path/to/destination>" >&2
  exit 1
fi

last_ref=$(jq -r '.version.ref // ""' < $payload)
echo $last_ref > $destination/version
if [ -z "${name}" ]; then
  bosh "${config}-config" > $destination/${config}-config.yml
else
  bosh config "${config}" --name="${name}" > $destination/${config}-config.yml
fi

jq -n "{
  \"version\": {\"ref\": \"$last_ref\"},
  \"metadata\": [{\"name\": \"sha1\", \"value\": \"$last_ref\"}]
}" >&3
